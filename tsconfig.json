{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "paths": {
      "layouts/*": ["src/layouts/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "static/*": ["static/*"],
      "types": ["src/types.tsx"]
    }
  },
  "include": ["src/**/*"]
}
